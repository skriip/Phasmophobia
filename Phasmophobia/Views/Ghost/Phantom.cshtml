    <style>
        body {
            background-color: black;
            color: white;
            font-family: 'Bloody', cursive;
            margin: 0;
        }

        h1, h2 {
            color: white;
        }

        .evidence-list,
        .ghost-list {
            list-style-type: none;
            column-gap: 10px;
            padding: 0;
        }

        .ghost-list {
            column-count: 3;
        }

        .ghost-name {
            font-weight: bold;
            text-decoration: none;
        }

        .evidence-square {
            width: 20px;
            height: 20px;
            border: 1px solid white;
            box-sizing: border-box;
            display: inline-block;
            margin-right: 5px;
            position: relative;
        }

            .evidence-square::before {
                content: "\2713";
                color: white;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                opacity: 0;
            }

        .evidence-selected .evidence-square::before,
        .evidence-selected.crossed-out .evidence-square::before {
            content: "\2717";
            opacity: 1;
        }

        .evidence-selected.crossed-out .evidence-square::before {
            content: "\0336";
            color: grey;
        }

        .evidence-selected .evidence-text {
            color: white;
            text-decoration: none;
        }

        .evidence-selected.crossed-out .evidence-text {
            text-decoration: line-through;
            color: grey;
        }

        .ghost-link {
            text-decoration: none;
            color: white;
        }

        .evidence-list {
            column-count: 2;
        }

        #buttons-container {
            margin-left: 20px;
            margin-top: 20px;
            display: flex;
            flex-direction: row;
        }

            #buttons-container button {
                color: white;
                background: none;
                border: none;
                padding: 10px;
                margin-right: 10px;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                #buttons-container button:hover {
                    color: rgba(255, 255, 255, 0.7);
                }
    </style>
</head>
