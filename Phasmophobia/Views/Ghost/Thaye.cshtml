            height: 20px;
            border: 1px solid white;
            box-sizing: border-box;
            display: inline-block;
            margin-right: 5px;
            position: relative;
        }

            .evidence-square::before {
                content: "\2713";
                color: white;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                opacity: 0;
            }

        .evidence-selected .evidence-square::before,
        .evidence-selected.crossed-out .evidence-square::before {
            content: "\2717";
            opacity: 1;
        }

        .evidence-selected.crossed-out .evidence-square::before {
            content: "\0336";
            color: grey;
        }

        .evidence-selected .evidence-text {
            color: white;
            text-decoration: none;
        }

        .evidence-selected.crossed-out .evidence-text {
            text-decoration: line-through;
            color: grey;
        }

