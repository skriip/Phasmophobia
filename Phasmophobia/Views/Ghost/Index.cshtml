    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
        }

        h1, h2 {
            color: white; /* Зеленый цвет для заголовков */
        }

        .evidence-list {
            list-style-type: none;
        }

        .ghost-list {
            list-style-type: none;
        }

        .ghost-name {
            font-weight: bold;
        }

        .evidence-square {
            width: 20px;
            height: 20px;
            border: 1px solid white;
            box-sizing: border-box;
            display: inline-block;
            margin-right: 5px;
            position: relative;
        }

            .evidence-square::before {
                content: "\2713"; /* Крестик (✓) */
                color: white;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                opacity: 0;
            }

        .evidence-selected .evidence-square::before {
            content: "\2717"; /* Крестик (✗) */
            color: white;
            opacity: 1;
        }

        .evidence-selected.crossed-out .evidence-square::before {
            content: "\0336"; /* Зачеркивание (/) */
            color: grey;
            opacity: 1;
        }

        .evidence-selected.crossed-out {
            text-decoration: line-through;
            color: grey !important;
        }
    </style>
</head>
