    <script>
        showInformation();
        function toggleEvidence(evidenceId) {
            var evidenceElement = document.getElementById(evidenceId);

            if (evidenceElement.classList.contains("evidence-selected")) {
                if (evidenceElement.classList.contains("crossed-out")) {
                    evidenceElement.classList.remove("evidence-selected", "crossed-out");
                } else {
                    evidenceElement.classList.add("crossed-out");
                }
            } else {
                evidenceElement.classList.add("evidence-selected");
            }

            updateGhostVisibility();
        }

        function updateGhostVisibility() {
            var selectedEvidence = document.querySelectorAll(".evidence-selected:not(.crossed-out)");
            var crossedOutEvidence = document.querySelectorAll(".evidence-selected.crossed-out");
            var ghosts = document.querySelectorAll(".ghost");

            ghosts.forEach(function (ghost) {
                var ghostEvidence = ghost.getAttribute("data-evidence").split(" ");
                var isVisible = true;

                selectedEvidence.forEach(function (evidence) {
                    if (ghostEvidence.indexOf(evidence.id) === -1) {
                        isVisible = false;
                    }
                });

                crossedOutEvidence.forEach(function (evidence) {
                    if (ghostEvidence.indexOf(evidence.id) !== -1) {
                        isVisible = false;
                    }
                });

                var ghostNameElement = ghost.querySelector(".ghost-name");
                var ghostTextElement = ghostNameElement.parentNode;

                if (isVisible) {
                    ghostNameElement.style.textDecoration = "none";
                    ghostTextElement.style.color = "white";
                } else {
                    ghostTextElement.style.color = "grey";
                }
            });
        }
