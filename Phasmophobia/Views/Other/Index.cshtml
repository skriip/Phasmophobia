    <script>
        function showLocationInfo(locationName) {
            // Скрыть все блоки с информацией
            var locationInfos = document.querySelectorAll('.location-info');
            locationInfos.forEach(function (info) {
                info.style.display = 'none';
            });

            // Удалить класс .selected у всех элементов списка
            var locationListItems = document.querySelectorAll('.location-list-item');
            locationListItems.forEach(function (item) {
                item.classList.remove('selected');
            });

            // Отобразить блок информации для выбранной локации
            var selectedInfo = document.getElementById(locationName + '-info');
            selectedInfo.style.display = 'block';

            // Добавить класс .selected к выбранному элементу списка
            var selectedListItem = document.querySelector('.location-list-item[data-location="' + locationName + '"]');
            selectedListItem.classList.add('selected');
        }
    </script>

