<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Фазмафобия: Улики и Призраки</title>
    <link rel="stylesheet" href="~/css/equipImg.css" asp-append-version="true" />
    <style>
        body {
            background-color: black;
            color: white;
            font-family: 'Bloody', cursive;
            margin: 0;
        }

        .eq-link {
            text-decoration: none;
            color: white;
        }

        .img1 {
            width: 50%;
            height: auto;
        }

        .equip-list {
            list-style-type: none;
            column-gap: 10px;
            padding: 0;
            column-count: 3;
        }

        .slide {
            display: none; /* Initially hide all slides */
            width: 50%;
            height: auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative; /* Make the container for images relative */
        }

        .select-slide {
            transform: scale(1.25); /* Увеличение при выборе */
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5); /* Тень при выборе */
        }

        .image-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.caption {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 5px;
    text-align: center;
}



        #slider-container {
            text-align: center;
            margin-bottom: 20px;
        }

            #slider-container span {
                margin: 0 10px;
                cursor: pointer;
            }

        .active {
            text-decoration: underline;
        }

        .name-sel{
            transform: scale(1.25);
        }
        .location-name {
            font-size: 12px;
            align-content:flex-start;
           flex-wrap:wrap;

        }
        #buttons-container {
            margin-top: 20px;
            display: flex;
            justify-content: space-around;
        }

            #buttons-container button {
                color: white;
                background: none;
                border: none;
                padding: 10px;
                margin-right: 10px;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                #buttons-container button:hover {
                    color: rgba(255, 255, 255, 0.7);
                }
    </style>
</head>
<body>
    <div style="display: flex;">
        <div style="flex: 1;">
            <div id="slider-container">
                <span onclick="showTir('tir1')" data-tir="tir1" class="active">Тир 1</span>
                <span onclick="showTir('tir2')" data-tir="tir2">Тир 2</span>
                <span onclick="showTir('tir3')" data-tir="tir3">Тир 3</span>
            </div>
            <ul class="equip-list">
                <li>
                    <a asp-controller="Equipment" asp-action="LaserDots" class="eq-link">
                        <img class="slide tir1" src="~/imag/Equipment/tir1/laser.png" alt="Лазер">
                       
                        <img class="slide tir2" src="~/imag/Equipment/tir2/laser2.png" alt="Лазер">
                       
                        <img class="slide tir3" src="~/imag/Equipment/tir3/laser3.png" alt="Лазер">
                        
                    </a>
                </li>
                <li class="">
                    <a asp-controller="Equipment" asp-action="Emf5" class="eq-link">
                        <img class="slide tir1 select-slide" src="~/imag/Equipment/tir1/emf.png" alt="ЭМП">
                        <img class="slide tir2 select-slide" src="~/imag/Equipment/tir2/emf2.png" alt="ЭМП">
                        <img class="slide tir3 select-slide" src="~/imag/Equipment/tir3/emf3.png" alt="ЭМП">
                        <span class="location-name name-sel ">Направленный микрофон</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Equipment" asp-action="Crucifix" class="eq-link">
                        <img class="slide tir1" src="~/imag/Equipment/tir1/raspit.png" alt="Распятие">
                        <img class="slide tir2" src="~/imag/Equipment/tir2/cir2.png" alt="Распятие">
                        <img class="slide tir3" src="~/imag/Equipment/tir3/cir3.png" alt="Распятие">
                        <span class="location-name">Направленный микрофон</span>
                    </a>
                </li>
                <!-- Остальные элементы списка -->
            </ul>
        </div>
        <div style="flex: 1; padding-left: 20px;">
            <div id="buttons-container">
                <button onclick="showInformation()">Информация</button>

                <button onclick="showTir1()">Тир 1</button>
                <button onclick="showTir2()">Тир 2</button>
                <button onclick="showTir3()">Тир 3</button>

            </div>
            <div id="ghost-info"></div>

        </div>
    </div>
    <script>
        function showInformation() {
            ghostInfo = document.getElementById('ghost-info').innerHTML = `
                                    <h3>Информация о </h3>

                                            позже  эмп
                                    `;
        }

        function showTir1() {
            document.getElementById("ghost-info").innerHTML = `
                                    <h2>тир1</h2>
                                    эмп

                                    `;
        }


        function showTir2() {
            document.getElementById("ghost-info").innerHTML = `
                                    <h2>тир2   </h2>
                                           эмп2

                                    `;
        }
        function showTir3() {
            document.getElementById("ghost-info").innerHTML = `
                                    <h2>тир 3  </h2>
                                             эмп3

                                    `;
        }

        function showTir(tir) {
            document.querySelectorAll('.slide').forEach(function (slide) {
                slide.style.display = 'none'; // Скрываем все слайды
            });
            document.querySelectorAll('.' + tir).forEach(function (slide) {
                slide.style.display = 'block'; // Показываем слайды текущего тира
            });
            // Убираем подчеркивание у всех переключателей и добавляем активному
            document.querySelectorAll('#slider-container span').forEach(span => span.classList.remove('active'));
            document.querySelector(`#slider-container span[data-tir="${tir}"]`).classList.add('active');
        }

        // По умолчанию показываем тир 1
        showTir('tir1');
    </script>
</body>
</html>
